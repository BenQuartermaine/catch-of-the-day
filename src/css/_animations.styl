/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform translateX(0)
    max-height 60px
    padding 2rem 0 !important
    
.order-leave
  // transform translateY(0)
  transform translateX(0)
  transition all 0.5s
  max-height 60px
  &.order-leave-active
    transform translateX(120%)
    max-height 0px
    padding 0 !important
    
.count-enter
  transition all .15s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)
    
.count-leave
  transition all .15s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.count-leave-active
    transform translateY(-100%)
    
    